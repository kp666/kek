.col-lg-4.col-sm-6
  .panel.panel-default
    .panel-heading
      %h3.panel-title Recent stories
    .panel-body
      - @stories.each do |story|
        .story-info
          .media
            .media-left
              = link_to story, class: 'pull-left' do
                - if (img = extract_first_image(story.description))
                  = image_tag img.attributes['src'].value, height: '64px', width: '64px', class: 'img-rounded'
                - else
                  %i.fa.fa-picture-o{ style: 'font-size: 64px' }

            .media-body.recent-story
              %h4.media-heading
                = link_to story.title, story
              %p= truncate_text(story.description, story)
        %br

