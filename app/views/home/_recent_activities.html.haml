.col-lg-4.col-sm-6
  .panel.panel-default
    .panel-heading
      %h3.panel-title Recent activities
    .panel-body
      - @activities.each do |activity|
        .activity-info
          .media
            .media-left
              = link_to activity, class: 'pull-left' do
                - if (img = extract_first_image(activity.description))
                  = image_tag img.attributes['src'].value, height: '64px', width: '64px', class: 'img-rounded'
                - else
                  %i.fa.fa-picture-o{ style: 'font-size: 64px' }

            .media-body.recent-activity
              %h4.media-heading
                = link_to activity.title, activity
              %p= truncate_text(activity.description, activity)
        %br

