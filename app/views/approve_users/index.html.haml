.container
  .row
    .col-lg-12
      .main-heading
        %h1 Approve Users
      %ul
        - @users.each do |user|
          %li
            %h3
              = user.name
            %p= user.email
            = link_to 'Approve', approve_approve_users_path(id: user), method: :post, class: 'btn btn-default'
            = link_to 'delete', approve_users_path(id: user), method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure to delete the user?' }


